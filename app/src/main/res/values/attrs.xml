<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FancyRuler">

        <attr name="rulerFadingEnabled" format="boolean" />
        <attr name="rulerMainUnitBarColor" format="color" />
        <attr name="rulerMainUnitTextColor" format="color" />
        <attr name="rulerMiddleUnitBarColor" format="color" />
        <attr name="rulerMiddleUnitTextColor" format="color" />
        <attr name="rulerQuarterUnitBarColor" format="color" />
        <attr name="rulerQuarterUnitTextColor" format="color" />
        <attr name="rulerThreeQuartersUnitBarColor" format="color" />
        <attr name="rulerThreeQuartersUnitTextColor" format="color" />
        <attr name="rulerNormalUnitBarColor" format="color" />
        <attr name="rulerPointerColor" format="color" />
        <attr name="rulerBackgroundColor" format="color" />

        <attr name="rulerSystem" format="integer">
            <flag name="imperial" value="1" />
            <flag name="metric" value="10" />
        </attr>
        <attr name="rulerMaxValue" format="integer" />
        <attr name="rulerMinValue" format="integer" />
        <attr name="rulerDefaultPosition" format="float">
            <flag name="start" value="-1" />
            <flag name="middle" value="-2" />
            <flag name="end" value="-3" />
        </attr>
    </declare-styleable>
</resources>